{
    "name": "phpwatch/simple-container",
    "description": "A fast and minimal PSR-11 compatible Dependency Injection Container with array-syntax and without auto-wiring",
    "type": "library",
    "keywords": ["psr11", "container", "dependency injection", "psr-11"],
    "require": {
        "psr/container": "^2.0",
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ayesh Karunaratne",
            "email": "ayesh@aye.sh"
        }
    ],
    "provide": {
        "psr/container-implementation": "^1.1 || ^2.0"
    },
    "autoload": {
        "psr-4": {
            "PHPWatch\\SimpleContainer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPWatch\\SimpleContainer\\Tests\\": "tests/"
        }
    }
}
